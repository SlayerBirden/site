<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE HTML>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Maketok Site Engine">
    <meta name="author" content="Oleg Kulik">
    <link rel="icon" href="{{ base_url }}/favicon.ico">
    <title>{{ title }}</title>
    {% block head %}
        <!-- Bootstrap core CSS -->
        <link href="{{ css_url }}bootstrap.min.css" rel="stylesheet">
        <link href="{{ css_url }}bootstrap-theme.min.css" rel="stylesheet">
        <link href="{{ css_url }}base.css" rel="stylesheet">
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
</head>
<body>
{% block nav %}{% endblock %}
<header>
    <div class="container">
        <div id="info" class="info">
            <h1>{% trans %}%description%{% endtrans %}</h1>
        </div>
    </div>
</header>
<div class="container-fluid">
    {% for type, messages in session.flashbag.all() %}
        {% for message in messages %}
            {% if type == 'error'%}
                {% set type = 'danger' %}
            {% endif %}
            <ul class="list-unstyled">
                <li class="alert alert-{{ type }} alert-dismissable">
                    <button type="button" class="close"
                            data-dismiss="alert"
                            aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ message }}
                </li>
            </ul>
        {% endfor %}
    {% endfor %}
    {% block content %}{% endblock %}
</div>
<footer>
    <div class="container">
        {% block footer %}{% endblock %}
        {% trans %}&copy; 2014 <a href="http://maketok.com">maketok.com</a>.{% endtrans %}
    </div>
</footer>
<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ js_url }}jquery.min.js"></script>
<script src="{{ js_url }}bootstrap.min.js"></script>
{% block before_body_end %}{% endblock %}
</body>
</html>
